# Configuraciones de Producción para eSalud

# Configuración de Notificaciones de Exámenes
# Rango de días para notificaciones (60-67 días)
NOTIFICACIONES_EXAMENES_DIAS_MIN=60
NOTIFICACIONES_EXAMENES_DIAS_MAX=67

# Configuraciones de seguridad y rendimiento
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:generarClaveSeguraAquí

# Configuraciones de base de datos
DB_CONNECTION=pgsql
DB_HOST=produccion-db-server
DB_PORT=5432
DB_DATABASE=esalud_produccion
DB_USERNAME=esalud_user
DB_PASSWORD=contraseña_segura

# Configuraciones de cola y caché
QUEUE_CONNECTION=redis
CACHE_DRIVER=redis
REDIS_HOST=produccion-redis-server

# Configuraciones de correo
MAIL_MAILER=smtp
MAIL_HOST=smtp.produccion.com
MAIL_PORT=587
MAIL_USERNAME=notificaciones@esalud.com
MAIL_PASSWORD=contraseña_smtp_segura

# Otras configuraciones de producción
LOG_CHANNEL=daily
LOG_LEVEL=error
