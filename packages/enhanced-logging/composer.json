{
    "name": "esalud/enhanced-logging",
    "description": "Paquete de logging avanzado para Laravel con caracter√≠sticas de seguridad y contexto",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "logging",
        "security",
        "contextual-logging",
        "php"
    ],
    "authors": [
        {
            "name": "Omar Ahumada",
            "email": "omar.ahumadag@gmail.com",
            "role": "Desarrollador Principal"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^11.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Esalud\\EnhancedLogging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esalud\\EnhancedLogging\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
