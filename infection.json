{
    "source": {
        "directories": [
            "app"
        ]
    },
    "logs": {
        "text": "infection.log",
        "html": "infection.html",
        "summary": "summary.log",
        "json": "infection-log.json",
        "perMutator": "per-mutator.md"
    },
    "tmpDir": "storage/framework/infection",
    "mutators": {
        "@default": true,
        "@function_signature": false,
        "global-ignore": [
            "App\\Exceptions\\*"
        ]
    },
    "testFramework": "pest",
    "bootstrap": "./vendor/autoload.php",
    "initialTestsPhpOptions": "-d memory_limit=4G",
    "minMsi": 80,
    "minCoveredMsi": 90,
    "timeout": 30
}
