# Configuraciones Globales de Notificaciones
NOTIFICATIONS_DEBUG=false
NOTIFICATIONS_LOG_CHANNEL=daily

# Configuraciones de Notificaciones de Exámenes
NOTIFICACIONES_EXAMENES_DIAS_MIN=30  # Días mínimos para notificar
NOTIFICACIONES_EXAMENES_DIAS_MAX=37  # Días máximos para notificar
NOTIFICACIONES_EXAMENES_INTENTOS=3   # Máximo de intentos de envío
NOTIFICACIONES_EXAMENES_COLA=notifications  # Cola de procesamiento
NOTIFICACIONES_EXAMENES_RETRASO=5    # Minutos de retraso

# Canales de Notificación
NOTIFICACIONES_EXAMENES_EMAIL=true    # Habilitar notificaciones por email
NOTIFICACIONES_EXAMENES_SMS=false     # Habilitar notificaciones por SMS
NOTIFICACIONES_EXAMENES_TELEGRAM=false # Habilitar notificaciones por Telegram

# Configuraciones de Notificaciones EPO
NOTIFICACIONES_EPO_DIAS=30            # Días de anticipación para EPO
NOTIFICACIONES_EPO_USUARIOS=true      # Habilitar notificaciones para usuarios EPO

# Integraciones de Notificaciones
NOTIFICATIONS_TELEGRAM_ENABLED=false  # Habilitar integración con Telegram
NOTIFICATIONS_TELEGRAM_TOKEN=         # Token de bot de Telegram
NOTIFICATIONS_TELEGRAM_CHAT_ID=       # ID de chat de Telegram
NOTIFICATIONS_SLACK_ENABLED=false     # Habilitar integración con Slack
NOTIFICATIONS_SLACK_WEBHOOK=          # Webhook de Slack
